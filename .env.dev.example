# Development Environment Variables
# Copy this to .env.dev for local development

# AWS Credentials (use your IAM credentials)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-north-1

# Route53 Configuration
HOSTED_ZONE_ID=your-zone-id
DOMAIN_NAME=smultron.zwc.se

# Admin Credentials (use same as .env or create dev-specific ones)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-dev-admin-password
JWT_SECRET=your-dev-jwt-secret

# Feature Flags
# Set to 'true' to disable authentication checks in dev environment
# WARNING: This should ONLY be used for development/testing!
DISABLE_AUTH=false

# DynamoDB Tables (automatically set by CDK deployment based on environment)
PRODUCTS_TABLE=smultron-products-dev
CATEGORIES_TABLE=smultron-categories-dev
ORDERS_TABLE=smultron-orders-dev

# API URL for local testing (set after deployment)
API_URL=https://dev.smultron.zwc.se/v1
CLOUDFRONT_URL=https://dev.smultron.zwc.se
